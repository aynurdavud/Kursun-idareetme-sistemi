@model Courseeee.Models.MailMessage

@{
    ViewData["Title"] = "Send";
}

<h1></h1>

<h4>Mail göndərilməsi</h4>
@if (ViewBag.Mgs != null)
{
    <h4>@ViewBag.Mgs</h4>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Kime" class="control-label"></label>
                <input asp-for="Kime" class="form-control" />
                <span asp-validation-for="Kime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Başliq" class="control-label"></label>
                <input asp-for="Başliq" class="form-control" />
                <span asp-validation-for="Başliq" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Metn" class="control-label"></label>
                <input asp-for="Metn" class="form-control" />
                <span asp-validation-for="Metn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Students" asp-action="Index">Geri qayıt</a>
</div>

@section Scripts {

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}
