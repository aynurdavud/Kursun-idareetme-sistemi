@model Group
@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>

<form method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label asp-for="@Model.Ad"></label>
        <textarea asp-for="@Model.Ad" class="form-control"></textarea>
        <span asp-validation-for="@Model.Ad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Vaxt"></label>
        <textarea asp-for="@Model.Vaxt" class="form-control"></textarea>
        <span asp-validation-for="@Model.Vaxt" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Telebe_sayi"></label>
        <textarea asp-for="@Model.Telebe_sayi" class="form-control"></textarea>
        <span asp-validation-for="@Model.Telebe_sayi" class="text-danger"></span>
    </div>
   
    
    <div class="form-group">
        <label for="exampleFormControlSelect1">Müəllim</label>
        <select class="form-control" name="teacherId">
            <option></option>
            @foreach (Teacher item in ViewBag.Teachers)
            {

                @if (Model.TeacherId == item.Id)
                {
                    <option selected value="@item.Id">@item.Ad</option>
                }
                else
                {
                    <option value="@item.Id">@item.Ad</option>
                }

            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary"><i class="mdi mdi-folder-plus"></i>Update</button>
    <a asp-controller="Groups" asp-action="Index" class="btn btn-success"><i class="mdi mdi-folder-upload"></i>Go Back</a>
</form>
@section Scripts{

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>


}


